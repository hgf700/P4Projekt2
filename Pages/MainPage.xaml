<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P4Projekt2.MainPage"
             xmlns:vm="clr-namespace:P4Projekt2.MVVM"
             x:DataType="vm:MainPageViewModel">

    <ScrollView>
        <FlexLayout Padding="10" AlignItems="Center" Direction="Column" JustifyContent="SpaceBetween">
            <VerticalStackLayout Margin="10">
                <Label Text="Application for contact with your doctor" />
            </VerticalStackLayout>

            <VerticalStackLayout Margin="10">
                <Button Command="{Binding NavigateToSignInCommand}" Text="Sign In" />
            </VerticalStackLayout>
        </FlexLayout>
    </ScrollView>
</ContentPage>
