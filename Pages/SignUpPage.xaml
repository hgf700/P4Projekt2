<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P4Projekt2.Pages.SignUpPage"
             xmlns:vm="clr-namespace:P4Projekt2.MVVM"
             Title="SignUpPage"
             
             >

    <!--x:DataType="vm:SignUpPageViewModel"-->
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label FontSize="24" HorizontalOptions="Center" Text="Sign Up" />

            <Entry Placeholder="Firstname" Text="{Binding Firstname}" />
            <Entry Placeholder="Lastname" Text="{Binding Lastname}" />
            <Entry Keyboard="Email" Placeholder="Email" Text="{Binding Email}" />
            <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}" />
            <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
        </StackLayout>
    </ScrollView>
</ContentPage>
