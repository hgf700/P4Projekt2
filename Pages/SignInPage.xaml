<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P4Projekt2.Pages.SignInPage"
             xmlns:vm="clr-namespace:P4Projekt2.MVVM"
             x:DataType="vm:SignInPageViewModel"
             Title="SignInPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Password" Text="{Binding Password}" />
            <Label Text="{Binding ErrorMessage}" />
            <Button Command="{Binding SignInCommand}" Text="Sign In" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
